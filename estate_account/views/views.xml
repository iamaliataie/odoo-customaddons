<odoo>
  <data>

    <record id="property_view_form_realestate_inherit" model="ir.ui.view">
      <field name="name">realestate.property.view.form.inherit</field>
      <field name="model">realestate.property</field>
      <field name="inherit_id" ref="realestate.property_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button name="open_invoice" type="object" class="oe_stat_button" icon="fa-envelope" string="Invoice">
            <!-- <field name="field_name" string="" widget="statinfo"/> -->
          </button>
        </xpath>
      </field>
    </record>

    <record id="view_move_form_account_inherit" model="ir.ui.view">
      <field name="name">account.move.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
          <button name="open_property" type="object" class="oe_stat_button" icon="fa-home" string="Property">
          </button>
        </xpath>
      </field>
    </record>


  </data>
</odoo>